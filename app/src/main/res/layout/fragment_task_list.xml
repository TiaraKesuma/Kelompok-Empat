<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/mainbackground"
    tools:context=".TaskListView">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lists"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@drawable/bgsearch" />
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:id="@+id/task_1"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/bgitem"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Watcing a Movie"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/maintext"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Nov, 3:00 PM"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/kotakhijau"
                    android:textColor="@color/maintext"
                    android:textAlignment="center"/>
        </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:id="@+id/task_2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/bgitem"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Watcing a Movie"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/maintext"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Nov, 3:00 PM"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/kotakoren"
                    android:textColor="@color/maintext"
                    android:textAlignment="center"/>
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:id="@+id/task_3"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/bgitem"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Watcing a Movie"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/maintext"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Nov, 3:00 PM"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/kotakmerah"
                    android:textColor="@color/maintext"
                    android:textAlignment="center"/>
            </LinearLayout>

        </FrameLayout>

        <Button
            android:id="@+id/add_task_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/birumain"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            app:cornerRadius="25dp"
            android:text="+"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="290dp"
             />


    </LinearLayout>

</LinearLayout>