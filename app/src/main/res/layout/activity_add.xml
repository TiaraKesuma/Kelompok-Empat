<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/mainbackground"
    tools:context=".ui.addTask.AddActivity">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:textSize="32sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        tools:hint="Add Task" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bgadd"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:text="@string/item_title"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/maintext" />
                <EditText
                    android:id="@+id/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/bgtitle"
                    android:paddingHorizontal="10dp"
                    android:hint="@string/item_title"
                    android:minHeight="48dp"
                    android:inputType="text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:text="@string/item_description"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/maintext" />
                <EditText
                    android:id="@+id/item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgdeskripsi"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:hint="@string/item_description"
                    android:gravity="top"
                    android:layout_marginHorizontal="20dp"
                    android:inputType="text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:text="@string/item_due_date"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/maintext" />
                <EditText
                    android:id="@+id/item_due_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/bgtitle"
                    android:hint="@string/item_due_date"
                    android:minHeight="48dp"
                    android:paddingHorizontal="10dp"
                    android:inputType="text" />
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/kotakdelete"
                    android:text="@string/add"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:paddingTop="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp" />
                <TextView
                    android:id="@+id/item_cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/kotakdelete"
                    android:backgroundTint="@color/merahcancelculture"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:paddingTop="1dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="15dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>