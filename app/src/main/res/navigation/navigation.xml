<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/list_view">

    <fragment
        android:id="@+id/list_view"
        android:name="com.example.trollo.TaskListView"
        android:label="fragment_task_list"
        tools:layout="@layout/fragment_task_list">
        <action
            android:id="@+id/action_list_view_to_add_task"
            app:destination="@id/add_task" />
        <action
            android:id="@+id/action_list_view_to_task_detail"
            app:destination="@id/task_detail" />
    </fragment>
    <fragment
        android:id="@+id/add_task"
        android:name="com.example.trollo.AddTask"
        android:label="fragment_add_task"
        tools:layout="@layout/fragment_add_task">
        <action
            android:id="@+id/action_add_task_to_list_view"
            app:destination="@id/list_view" />
        <action
            android:id="@+id/action_back"
            app:destination="@id/list_view"
            app:popUpTo="@id/list_view"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/task_detail"
        android:name="com.example.trollo.TaskDetail"
        android:label="fragment_task_detail"
        tools:layout="@layout/fragment_task_detail">
        <action
            android:id="@+id/action_task_detail_to_list_view"
            app:destination="@id/list_view" />
        <action
            android:id="@+id/action_back"
            app:destination="@id/list_view"
            app:popUpTo="@id/list_view"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
