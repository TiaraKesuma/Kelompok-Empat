<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.trollo.ui.mainView.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main">
        <action
            android:id="@+id/action_main_to_add"
            app:destination="@id/addActivity" />
        <action
            android:id="@+id/action_main_to_notifier"
            app:destination="@id/notifierFragment" />
    </activity>
    <activity
        android:id="@+id/addActivity"
        android:name="com.example.trollo.ui.addTask.AddActivity"
        android:label="activity_add"
        tools:layout="@layout/activity_add">
        <action
            android:id="@+id/action_add_to_main"
            app:destination="@id/mainActivity" />
    </activity>
    <fragment
        android:id="@+id/notifierFragment"
        android:name="com.example.trollo.ui.mainView.NotifierFragment"
        android:label="fragment_notifier"
        tools:layout="@layout/fragment_notifier" >
        <action
            android:id="@+id/action_notifier_to_main"
            app:destination="@id/mainActivity" />
    </fragment>
</navigation>